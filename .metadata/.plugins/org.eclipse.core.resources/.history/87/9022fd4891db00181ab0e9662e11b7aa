package controllers;

import java.io.IOException;

import application.Global;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.layout.Pane;

public class MenuScreenController {

	Global g;
	
	private MainScreenController msc;
	
	// Obs³uga przycisków menui
	@FXML
	public void onActionOpenApplication() {
		FXMLLoader ld = g.getResLoader("ApplicationScreen");
		Pane obj;
		try {
			obj = ld.load();

			ApplicationScreenController msc = ld.getController();
			msc.setMainController(this);

			setScreenPane(obj);
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

	@FXML
	public void onActionOptions() {
		
	}

	@FXML
	public void onActionExit() {

	}
	
	@FXML public void initialize()
	{
		g = new Global();
	}
	
	public void setMainController(MainScreenController msc)
	{
		this.msc = msc;
	}

}
